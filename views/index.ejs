<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Blog</title>
</head>
<body>
    <div>
        <h1 class="text-center m-2 p-2 text-primary"> Welcome to the Blog</h1>
        <ul class="list-unstyled mb-3 p-3 ">
            <% if (locals.blogPosts && locals.blogPosts.length > 0) { %>
                <% locals.blogPosts.forEach(post => { %>
                    <li>
                        <div class="mb-2">
                            <a href="/post/<%= post.id %>" class="text-decoration-none">
                                <div class="card mt-2 w-75">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= post.title %></h5>
                                        <p class="card-text"><%= post.content %></p>
                                    </div>
                                </div>
                            </a>  
                        </div>                      
                        <div class="buttons-container">
                            <a href="/edit/<%= post.id %>" class="btn btn-primary me-2">Edit</a>
                            <a href="/post/<%= post.id %>" class="btn btn-danger">Delete</a>
                        </div>
                        
                    </li>
                <%}); %>
                <% } else { %>
                    <p>No posts available.</p>
                <% } %>
        </ul>
    </div>

    <div class="text-center mt-4">
        <a href="/create" class="btn btn-success"> Create a new Post </a>
    </div>
    
</body>
</html>